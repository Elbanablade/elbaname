	margin-left: 0px;
	margin-top: 10px;
	padding: 0px;
	text-align:middle;
	top: 82px;
	width: 100%;
	z-index:111;
}

.navigation_hover
{
	background: #111111;
	border-top: 1px solid #D5202D;
	display: block;
	height:40px;
	left: 0px;
	top: 83px;
	width:1920px;
	z-index:110;
}

.navigation_hover:hover .navigation
{
	display: block;
}

