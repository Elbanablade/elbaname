html
{
	background: none repeat scroll 0 0 #111111;
	color: #CCCCCC;
	font-family: 'Source sans pro',sans-serif;
	font-size: 17px;
}

header 
{

	background: none repeat scroll 0 0 #111111;
	border-bottom: 4px solid #D52020;
	color: #CCCCCC;
	display:block;
	height:80px;
	left:0px;
	line-height:78px;
	margin: 0px;
	padding: 0px;
	position:fixed;
	top:0px;
	width:100%;
	z-index: 100;
}

.navigation
{
	background: none repeat scroll 0 0 #111111;
	border-top:0px;
	color: #CCCCCC;
